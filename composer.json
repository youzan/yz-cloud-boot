{
    "name": "youzanyun/yz-cloud-boot",
    "type": "library",
    "license": "MIT",
    "description": "Bootstrap for YZCloud PHP Application",
    "authors": [
        {
            "name": "vimac",
            "email": "vifix.mac@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.1.0",
        "ext-PDO": "*",
        "ext-json": "*",
        "ext-curl": "*",
        "ext-redis": "*",
        "slim/slim": "^3.0",
        "psr/container": "1.0.0",
        "monolog/monolog": "^1.24",
        "slim/twig-view": "^2.5",
        "symfony/yaml": "^4.3",
        "workerman/workerman": "^3.5",
        "youzanyun/open-sdk": ">=2.0.26"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.0",
        "ext-pcntl": "*",
        "ext-posix": "*"
    },
    "autoload": {
        "psr-4": {
            "YouzanCloudBoot\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "YouzanCloudBootTests\\": "tests"
        }
    },
    "scripts": {
        "devServer": "bin/php_dev_server.sh"
    }
}
